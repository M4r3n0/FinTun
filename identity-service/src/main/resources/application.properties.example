server.port=8081
spring.application.name=identity-service

# Database
spring.datasource.url=jdbc:postgresql://localhost:5432/tunfin
spring.datasource.username=user
spring.datasource.password=${DB_PASSWORD:password}
spring.jpa.hibernate.ddl-auto=update

# Security (JWT)
jwt.secret=${JWT_SECRET:your-256-bit-secret-your-256-bit-secret}
jwt.expiration=86400000

# Sumsub KYC
sumsub.app.token=${SUMSUB_APP_TOKEN:YOUR_SUMSUB_APP_TOKEN}
sumsub.secret.key=${SUMSUB_SECRET_KEY:YOUR_SUMSUB_SECRET_KEY}
sumsub.api.url=https://api.sumsub.com
